
<%- include('../partials/adminHeader') %>

<div class="main">
<div class="container mt-3" style="padding-top: 10vh; z-index: 3  ;">
    <h3 style="margin-left: 40%;">Sales Report</h3>
    <form action="/admin">
      <button class="pb-1 btn btn-primary" style="width:100px" type="submit">Go Back</button>
    </form>
  <table id="myTab" class="table align-middle mb-0 bg-white">
      <thead class="bg-light">
        <tr>
          <th>Product</th>
          <th>Category</th>
          <th>Quantity Sold</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
          <%for(let i=1;i<=product.length;i++){%>
        <tr>
          <td>
            <div class="d-flex align-items-center">
              
              <img
                  src="/admin/assets/uploads/<%=product[i-1].image[0]%>"
                  alt=""
                  style="width: 45px; height: 45px"
                  class="rounded-circle"
                  />
                  
              <div class="ms-3">
                <p class="fw-bold mb-1 ml-3"><%= product[i-1].name %></p>
                <p class="fw-normal mb-1">Price: ₹<%= product[i-1].price %></p>
              </div>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1"><%= product[i-1].category %></p>
            <p class="fw-normal mb-1">Quantity:<%= product[i-1].quantity %></p>
          </td>
          <td>
              <div>
                  <p class="fw-normal mb-1"><%= product[i-1].sales %></p>
              </div>
          </td>
          <td>
              <p class="fw-normal mb-1">₹<%= product[i-1].price*product[i-1].sales %></p>
          </td>
          
        </tr>
        <%}%>
        
      </tbody>
    </table>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.html5.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.3.2/js/buttons.print.min.js"></script>

<script>
    $(document).ready(function() {
    $('#myTab').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'copy', 'csv', 'excel', 'pdf', 'print'
        ]
      } );
      } )
    </script>

<%- include('../partials/adminFooter') %>

