  <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
    style="background-image: url('/assets/images/backgrounds/slide-1.jpg')">
    <div class="container">
      <div class="form-box">
        <div class="form-tab">
          <ul class="nav nav-pills nav-fill" role="tablist">
            <li class="nav-item">
              <a class="nav-link" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab"
                aria-controls="signin-2" aria-selected="false">Sign In</a>
            </li>
          </ul>
          <% if (typeof message !=='undefined' ){ %>
            <p style="color: red"><%= message %></p>
          <%}%>
          <div class="tab-content">

            <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
              <form action="/login" method="post">
                <div class="form-group">
                  <label for="register-email-2">Your email address *</label>
                  <input type="email" class="form-control" id="register-email-2"  name="email" placeholder="Enter email" required />
                </div>

                <div class="form-group">
                  <label for="register-password-2">Password *</label>
                  <input type="password" class="form-control" id="register-password-2" name="password"
                  placeholder="Enter password" required/>
                </div>

                <div class="form-footer">
                  <button type="submit" class="btn btn-outline-primary-2">
                    <span>Login</span>
                    <i class="icon-long-arrow-right"></i>
                  </button>

                  <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="register-policy-2" required>
                    <label class="custom-control-label" for="register-policy-2">I agree to the <a href="#">privacy
                        policy</a> *</label>
                  </div><!-- End .custom-checkbox -->
                </div><!-- End .form-footer -->
              </form>
              <label class="custom-control-label" >Not a member? Register </label><br>
              <button class="btn btn-outline-primary-2">
                <a href="/register" style="text-decoration: none">Register</a>
                
                <i class="icon-long-arrow-right"></i>
              </button><br>
              <a href="/forgotPassword" style="text-decoration: none">forgot password ? </a>


            </div><!-- .End .tab-pane -->
          </div><!-- End .tab-content -->
        </div><!-- End .form-tab -->
      </div><!-- End .form-box -->
    </div><!-- End .container -->
  </div><!-- End .login-page section-bg -->
  </main><!-- End .main -->

  <%- include('../partials/userFooter') %>