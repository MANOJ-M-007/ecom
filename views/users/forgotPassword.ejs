<%- include('../partials/userHeader') %>


<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
    style="background-image: url('/assets/images/backgrounds/slide-1.jpg')">
    <div class="container">
      <div class="form-box">
        <div class="form-tab">
          <ul class="nav nav-pills nav-fill" role="tablist">
            <li class="nav-item">
              <a class="nav-link" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab"
                aria-controls="signin-2" aria-selected="false">Sign In</a>
            </li>
          </ul>
          
          <div class="tab-content">
              
              <div class="tab-pane fade show active" id="register-2" role="tabpanel" aria-labelledby="register-tab-2">
                    <% if (email){ %>
                    <form action="/forgotPassword" method="post">
                        
                        <div class="form-group">
                            <label for="register-email-2">Your email address *</label>
                            <input type="email" class="form-control" id="register-email-2"  name="email" placeholder="Enter email" required />
                        </div>
                        
                        
                        <div class="form-footer">
                            <button type="submit" class="btn btn-outline-primary-2">
                                <span>Submit</span>
                                <i class="icon-long-arrow-right"></i>
                            </button>
                            
                            <div class="custom-control custom-checkbox">
                                
                                
                            </div><!-- End .custom-checkbox -->
                        </div><!-- End .form-footer -->
                    </form>
                    <%}%>

                    <% if (enterOtp){ %>
                        <form action="/forgotPasswordOtp" method="post">
                            <input type="hidden" name="user" value="<%= user %>">
                            <input type="hidden" name="checkOtp" value="<%= otp %>">
                            <div class="form-group">
                                <label for="register-email-2">Enter the OTP</label>
                                <input type="text" class="form-control" id="register-email-2"  name="otp" placeholder="Enter otp" required />
                            </div>
                            
                            
                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>Submit</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>
                                
                                <div class="custom-control custom-checkbox">
                                    
                                    
                                </div><!-- End .custom-checkbox -->
                            </div><!-- End .form-footer -->
                        </form>
                        <%}%>

                        <% if (changePassword){ %>
                            <form action="/forgotChangePassword" method="post">
                                <input type="hidden" name="user" value="<%= user %>">
                                <div class="form-group">
                                    <label for="register-email-2">Enter the new password</label>
                                    <input type="text" class="form-control" id="register-email-2"  name="password1" placeholder="Enter password" required />
                                </div>

                                <div class="form-group">
                                    <label for="register-email-2">confirm password</label>
                                    <input type="text" class="form-control" id="register-email-2"  name="password2" placeholder="confirm password" required />
                                </div>
                                
                                
                                <div class="form-footer">
                                    <button type="submit" class="btn btn-outline-primary-2">
                                        <span>Submit</span>
                                        <i class="icon-long-arrow-right"></i>
                                    </button>
                                    
                                    <div class="custom-control custom-checkbox">
                                        
                                        
                                    </div><!-- End .custom-checkbox -->
                                </div><!-- End .form-footer -->
                            </form>
                            <%}%>
                            <% if (success){ %>
                                    <div >
                                        <h1>success</h1>  
                                    </div>
                                    
                                    
                                    <div class="form-footer">
                                        <a  class="btn btn-outline-primary-2" href="/login">
                                            <span>login</span>
                                            <i class="icon-long-arrow-right"></i>
                                        </a>
                                    </div>
                                
                                <%}%>

                            <!-- <div class="form-group">
                              <label for="register-password-2">Password *</label>
                              <input type="password" class="form-control" id="register-password-2" name="password"
                              placeholder="Enter password" required/>
                            </div>
     -->

                            
            </div><!-- .End .tab-pane -->
          </div><!-- End .tab-content -->
        </div><!-- End .form-tab -->
      </div><!-- End .form-box -->
    </div><!-- End .container -->
  </div><!-- End .login-page section-bgÂ -->
</main>

<%- include('../partials/userFooter') %>